extends layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/product.css")

block content
    main
        if prods.length > 0
            h1 My Products 
            p List of all the products 
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://th.bing.com/th/id/R.5a70b03363743624341af2248ff772a2?rik=KPMD%2f3Yk4OUP%2bw&riu=http%3a%2f%2fimages.wisegeek.com%2fthick-red-book.jpg&ehk=ioWdi6U4UJTp7zk18UrSPx3l6iqcVZpGaVwZl%2fHgwOY%3d&risl=&pid=ImgRaw&r=0" alt="A Book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No products found